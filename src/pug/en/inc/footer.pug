    img(src=`${path}assets/img/ico_toTop.png`, alt="")
    
  .container
    ul.l-footer_nav
      li.l-footer_nav-item.is-active
        a(href=`${path}en/`)
          span トップ
          span.u-font-azoSans TOP
      li.l-footer_nav-item
        a(href=`${path}en/outline/`)
          span 会社案内
          span.u-font-azoSans OUTLINE
